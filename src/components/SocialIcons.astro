---
import {Github, Linkedin, Twitter, Youtube} from "lucide-svelte";

const socialLinks = [
  {
    name: "GitHub",
    url: "https://github.com/psmyrdek",
    icon: Github,
  },
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/psmyrdek/",
    icon: Linkedin,
  },
  {
    name: "X (Twitter)",
    url: "https://x.com/psmyrdek",
    icon: Twitter,
  },
  {
    name: "YouTube",
    url: "https://www.youtube.com/przeprogramowani",
    icon: Youtube,
  },
];
---

<div class='mt-8 flex justify-center gap-x-6'>
  {
    socialLinks.map(({name, url, icon: Icon}) => (
      <a
        href={url}
        class='text-indigo-500 hover:text-indigo-400 transition-colors duration-200'
        target='_blank'
        rel='noopener noreferrer'
        aria-label={name}
      >
        <Icon class='size-8' />
      </a>
    ))
  }
</div>
