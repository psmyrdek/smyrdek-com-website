---
import {Github, Linkedin, Twitter, Youtube} from "lucide-svelte";

const socialLinks = [
  {
    name: "GitHub",
    url: "https://github.com/psmyrdek",
    icon: Github,
    color: "text-gray-200 hover:text-white",
  },
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/psmyrdek/",
    icon: Linkedin,
    color: "text-blue-500 hover:text-blue-300",
  },
  {
    name: "X (Twitter)",
    url: "https://x.com/psmyrdek",
    icon: Twitter,
    color: "text-sky-500 hover:text-sky-300",
  },
  {
    name: "YouTube",
    url: "https://www.youtube.com/przeprogramowani",
    icon: Youtube,
    color: "text-red-500 hover:text-red-300",
  },
];
---

<div
  class='mt-8 flex justify-center gap-x-6 bg-indigo-500/10 backdrop-blur-sm border border-indigo-500/30 rounded-lg p-4'
>
  {
    socialLinks.map(({name, url, color, icon: Icon}) => (
      <a
        href={url}
        class={`${color} transition-colors duration-200`}
        target='_blank'
        rel='noopener noreferrer'
        aria-label={name}
      >
        <Icon class='size-6' />
      </a>
    ))
  }
</div>
